<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SquareBoat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>



    </style>


    <style name="CustomSplashTheme" parent="Theme.SquareBoat">

        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <style name="HeaderBar" parent="ActionBarThemeOverlay">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">

        <item name="android:fontFamily">@font/montserrat_bold</item>

    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">#fff</item>
    </style>


</resources>